<div class="container">
  <h1>Our restaurants 🌮</h1>
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-4">
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= restaurant.name %></h5>
            <h6 class="card-subtitle mb-2 text-body-secondary">📍 <%= restaurant.address %></h6>
            <p class="card-text"><%= '🍽️' * restaurant.rating %></p>
            <%= link_to "Show more...", restaurant_path(restaurant) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>